@model Prodotto
@{
    ViewBag.Title = "Aggiungi Prodotto";
}

<h2> Aggiungi prodotto <a asp-action="Index" class="btn btn-sm  btn-secondary">Ritorna</a><h2>

<form asp-action="AddProdotto" method="post">

    <div class="form-group">
        <label  for="Nome">Nome:</label>
        <input class="form-control" name="Nome" />
    </div>

    <div class="form-group">
        <label for="UnitaMisura">Unita Misura:</label>
        <input class="form-control" name="UnitaMisura" />
    </div>

            <div class="form-group">
                <label for="Quantita">Quantità:</label>
                <input class="form-control" name="Quantita" />
            </div>

            <div class="form-group">
                <label for="Prezzo">Prezzo:</label>
                <input class="form-control" name="Prezzo" />
            </div>

            <div class="text-center panel-body">
                <button type="submit" class="btn btn-sm btn-primary">Salva</button>
            </div>
</form>

        @if (Model != null)
        {
            <h2>Prodotto</h2>
            <table>
                <thead>
                    <tr>
                        <td>ID</td>
                        <td>Nome</td>
                        <td>UM</td>
                        <td>Quantità</td>
                        <td>Prezzo</td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.ProdottoId</td>
                        <td>@Model.Nome</td>
                        <td>@Model.UnitMisura</td>
                        <td>@Model.Quantita</td>
                        <td>@Model.Prezzo</td>
                    </tr>
                </tbody>
            </table>

        }
