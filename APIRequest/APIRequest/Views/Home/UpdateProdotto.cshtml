@model Prodotto
@{
    ViewBag.Title = "Modifica Prodotto";
}

<h2>
    Aggiungi prodotto <a asp-action="Index" class="btn btn-sm  btn-secondary">Ritorna</a><h2>

        <form asp-action="UpdateProdotto" method="post">

            <div class="form-group">
                <label asp-for="ProdottoId"></label>
                <input class="form-control" asp-for="ProdottoId" />
            </div>
     
            <div class="form-group">
                <label asp-for="Nome"></label>
                <input class="form-control" asp-for="Nome" />
            </div>
            <div class="form-group">
                <label asp-for="UnitMisura"></label>
                <input class="form-control" asp-for="UnitMisura" />
            </div>
            <div class="form-group">
                <label asp-for="Quantita"></label>
                <input class="form-control" asp-for="Quantita" />
            </div>
            <div class="form-group">
                <label asp-for="Prezzo"></label>
                <input class="form-control" asp-for="Prezzo" />
            </div>
     

            <div class="text-center panel-body">
                <button type="submit" class="btn btn-sm btn-primary">Aggiorna</button>
            </div>
        </form>

        @if (Model != null)
        {
            <h2>Prodotto</h2>
            <table>
                <thead>
                    <tr>
                        <td>ID</td>
                        <td>Nome</td>
                        <td>UM</td>
                        <td>Quantità</td>
                        <td>Prezzo</td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.ProdottoId</td>
                        <td>@Model.Nome</td>
                        <td>@Model.UnitMisura</td>
                        <td>@Model.Quantita</td>
                        <td>@Model.Prezzo</td>
                    </tr>
                </tbody>
            </table>

        }
